<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CitiesAndFoods" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimaryDark</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondary</item>
    </style>
    <style name="AppTheme.ToolbarFont" parent="Theme.CitiesAndFoods">
        <!--This line changes the color of text in Toolbar-->
        <item name="android:textColorPrimary">@color/black</item>
        <!--This line changes the color of icons in toolbar (back, overflow menu icons)-->
        <item name="textAllCaps">false</item>
        <item name="android:textSize">10sp</item>

    </style>
</resources>